<div class="prefs">
  <p>
    Favorite Instrument(s):
    <% user.instruments.each do |i| %>
      <%= i.name.capitalize %>
    <% end %>
  </p>
  <p>
    Favorite Chord(s):
    <% user.chords.each do |c| %>
      <%= c.name %>
      <%= c.intervals.map(&:succ) %>
    <% end %>
  </p>
  <p>
    Favorite Scale(s):
    <% user.scales.each do |s| %>
      <%= s.name.capitalize %>
    <% end %>
  </p>
  <p>
    Favorite Reverb(s):
    <% user.reverbs.each do |r| %>
      <%= r.name %>
    <% end %>
  </p>

  <p>
    <%= link_to "Edit", edit_user_path, class: "btn" %>
  </p>
</div>
